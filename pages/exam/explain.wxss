@import "../comps/z-sharebox.wxss";

page, .page {
  background-color: #fff;
}

.page.has-btm .explain-content {
  margin-bottom: 44px;
}

.question {
  margin: 14px 0;
  line-height: 1.7;
  font-size: 15px;
}

.answer-list .item {
  background-color: #fff;
  margin-bottom: 11px;
  font-size: 14px;
  line-height: 1.5;
  border: 1rpx solid #ddd;
}

.answer-list .item .key {
  float: left;
  width: 32px;
  text-align: center;
  padding: 9px 0;
}

.answer-list .item .text {
  padding: 9px 9px;
  margin-left: 32px;
  border-left: 1rpx solid #ddd;
  background-color: #fff;
}

.answer-list .item.selected {
  background-color: #d9534f;
}

.answer-list .item.selected .key {
  color: #fff;
}

.answer-list .item.right {
  background-color: #4cae4c;
}

.answer-list .item.right .key {
  color: #fff;
}

.answer-list .split-line {
  border-top: 1rpx dotted #ddd;
  margin: 14px 0;
}

.answerkeys {
  background-color: #efeff4;
  height: 44px;
  line-height: 44px;
  border: 0 none;
}

.answerkeys .pull-left {
  width: 50%;
  color: #777;
  text-align: center;
}

.answerkeys .pull-left text {
  color: #000;
  margin-left: 3px;
}

#explain {
  border-top: 1rpx solid #d9d9d9;
  margin-top: 18px;
}

.explain-title {
  font-size: 15px;
  font-weight: bold;
  padding: 4px 14px;
}

.explain-content {
  line-height: 1.7;
  font-size: 15px;
  padding: 14px;
  padding-top: 0;
  padding-bottom: 9px;
}

.explain-source {
  color: #777;
  font-size: 13px;
  padding: 12px 14px;
  padding-bottom: 1px;
  padding-left: 33px;
  position: relative;
}

.explain-source icon {
  position: absolute;
  margin-top: 2px;
  left: 14px;
}

.top-position {
  text-align: center;
  position: fixed;
  top: 0;
  right: 0;
  left: 0;
  background-color: #fff;
  z-index: 19;
  border-bottom: 1rpx solid #d9d9d9;
}

.top-position .weui-flex__item {
  padding: 10px;
  font-size: 14px;
  position: relative;
  color: #999;
  background-color: transparent;
}

.top-position .weui-flex__item image {
  width: 16px;
  height: 16px;
  position: absolute;
  margin-left: -17px;
  top: 12px;
  display: none;
}

.top-position .weui-flex__item.active {
  color: #ec5353;
}

.top-position .weui-flex__item.active image {
  display: inline-block;
}

.page-nos {
  position: fixed;
  bottom: 15px;
  width: 162px;
  left: 50%;
  margin-left: -81px;
  height: 36px;
  text-align: center;
  white-space: normal;
  overflow: hidden;
  z-index: 9;
}

.page-nos view.el {
  background-color: rgba(0, 0, 0, 0.7);
  color: #fff;
  display: inline-block;
  width: 45px;
  text-align: center;
  font-size: 15px;
  line-height: 1;
  height: 36px;
  overflow: hidden;
}

.page-nos view image {
  width: 30px;
  height: 30px;
  margin-top: 2.5px;
}

.page-nos view.page-no {
  text-align: center;
  width: 70px;
  line-height: 36px;
  border-right: 1px solid rgba(255, 255, 255, 0.1);
  border-left: 1px solid rgba(255, 255, 255, 0.1);
}

.page-nos view.page-prev {
  border-radius: 99px 0 0 99px;
  float: left;
}

.page-nos view.page-next {
  border-radius: 0 99px 99px 0;
  float: right;
}

view.go-hover {
  background-color: rgba(0, 0, 0, 0.8) !important;
}

.vip-upgrade {
  background-color: #fff2e8;
  padding: 24px 14px;
  border-radius: 4px;
  margin-bottom: 9px;
  text-align: center;
}

.vip-upgrade view.tt {
  font-size: 18px;
  margin-bottom: 3px;
  color: #f40;
}

.vip-upgrade button {
  color: #a18d62;
  border: 2px solid #a18d62;
  font-size: 16px;
  background-color: transparent;
  width: 160px;
  line-height: 2.1;
  border-radius: 4px;
}

.vip-upgrade.min {
  padding: 12px 12px;
  text-align: left;
  margin-top: -18px;
  z-index: 1;
  position: relative;
}

.vip-upgrade.min view.tt {
  font-size: 14px;
  float: left;
  line-height: 1.3;
  margin: 0;
}

.vip-upgrade.min button {
  font-size: 15px;
  border-radius: 2px;
  line-height: 1.85;
  width: 99px;
  padding: 0;
  float: right;
  margin-top: 3px;
}

.explain-more {
  text-align: center;
  background-color: #fff;
  margin-top: -22px;
  margin-bottom: 3px;
}

.explain-more button {
  font-size: 15px;
  border-radius: 4px;
  width: 160px;
  display: inline-block;
  color: #a18d62;
  border: 1px solid #a18d62;
  background-color: transparent;
  line-height: 2;
}

.explain-limit {
  position: relative;
  max-height: 128px;
  overflow: hidden;
  z-index: 0;
}

.explain-limit .gradual {
  position: absolute;
  background: transparent url(https://c.rktk.qidapp.com/a/wxx/bg-gradual.png) repeat-x center bottom;
  background-size: 5px 75px;
  bottom: 0;
  right: 0;
  left: 0;
  height: 75px;
  z-index: 0;
}
