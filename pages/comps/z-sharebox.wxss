.sharebox {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #eee;
  z-index: 99;
  transform: translate(0, 100%);
}

.sharebox .title {
  color: #777;
  font-size: 12px;
  text-align: center;
  border-bottom: 1rpx solid #d9d9d9;
  padding: 8px;
}

.sharebox .weui-flex {
  margin: 22px 13px;
  margin-bottom: 21px;
}

.sharebox .weui-flex__item .icon {
  background-color: #fff;
  border-radius: 6px;
  width: 60px;
  height: 60px;
  margin: 0 auto;
  text-align: center;
  position: relative;
  overflow: hidden;
}

.sharebox .weui-flex__item .icon:active {
  background-color: #d9d9d9;
}

.sharebox .weui-flex__item .icon image {
  display: inline-block;
  margin-top: 12px;
}

.sharebox .weui-flex__item .icon button {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  opacity: 0;
}

.sharebox .weui-flex__item text {
  font-size: 12px;
  color: #777;
  display: block;
  text-align: center;
  line-height: 1.3;
  margin-top: 6px;
}

.sharebox view button.weui-btn {
  border-radius: 0;
  font-size: 17px;
  line-height: 2.6;
}

.dialog {
  position: fixed;
  z-index: 999;
  background-color: #fff;
  width: 80%;
  max-width: 300px;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border-radius: 4px;
  overflow: hidden;
}

.dialog .text {
  padding: 21px;
  text-align: center;
  font-size: 16px;
}

.dialog button {
  color: #586c94;
  font-size: 17px;
  border-top: 1rpx solid #d9d9d9;
  background-color: #fff;
  padding: 2px;
}

.dialog button:active {
  background-color: #eee;
}

.token-title {
  font-size: 16px;
}

.token-text {
  border: 1rpx solid #ccc;
  font-size: 13px;
  color: #888;
  padding: 8px;
  margin-top: 6px;
  text-align: left;
}

.fullscreen-fix.weui-btn {
  padding-bottom: 18px;
}